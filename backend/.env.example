# Control Station OS Backend Configuration
# Copy this file to .env and adjust values as needed

# API Configuration
API_TITLE="Control Station OS Backend"
API_VERSION="1.0.0"
DEBUG=true
RELOAD=true

# Server Configuration
HOST=127.0.0.1
PORT=8000

# CORS Configuration (React frontend URLs)
CORS_ORIGINS=["http://localhost:5173","http://localhost:5174","http://127.0.0.1:5173","http://127.0.0.1:5174"]

# Database Configuration
DATABASE_URL="sqlite:///./backend/data/control_station.db"

# Focus Guardian Configuration
FOCUS_UPDATE_INTERVAL=1.0
FOCUS_LOG_DIR="./backend/data/focus_logs"

# Pomodoro Configuration
POMODORO_FOCUS_MINUTES=25
POMODORO_SHORT_BREAK_MINUTES=5
POMODORO_LONG_BREAK_MINUTES=15
POMODORO_LONG_BREAK_CYCLE=4

# Security Configuration
SECRET_KEY="your-secret-key-change-in-production"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Feature Flags
NOTIFICATIONS_ENABLED=true
SYSTEM_MONITORING_ENABLED=true
CROSS_PLATFORM_SUPPORT=true